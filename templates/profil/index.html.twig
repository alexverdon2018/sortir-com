{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Profil{% endblock %}

{% block body %}

    <div class="container-fluid pt-4">
        <div class="row">
            <div class="col">
                <h2>Mon profil</h2>
                <hr>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-3 text-center">
                <img src="http://lorempixel.com/250/250">
            </div>
            <div class="col-12 col-md-4 col-lg-4">
                <div class="row mt-3">
                    <div class="col-4">Nom :</div>
                    <div class="col">{{ user_profil.nom }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-4">Prénom :</div>
                    <div class="col">{{ user_profil.prenom }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-4">Mail :</div>
                    <div class="col">{{ user_profil.mail }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-4">Téléphone :</div>
                    <div class="col">{{ user_profil.telephone }}</div>
                </div>
                <div class="row mt-3">
                    <div class="col-4">Site de rattachement :</div>
                    <div class="col">{{ user_profil.site.nom }}</div>
                </div>
            </div>
        </div>
        {% if app.user.id == user_profil.id  %}
        <div class="row mt-5">
            <div class="col text-center">
                <a class="btn btn-info" href="{{ path('profil_update') }}">Modifier</a>
            </div>
        </div>
        {% endif %}
    </div>

{% endblock %}
