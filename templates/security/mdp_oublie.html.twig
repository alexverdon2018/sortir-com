{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col">
                <h3>Mot de passe oublié</h3>
                <hr>
            </div>
        </div>
        <form>
            <div class="row">
                <div class="col-12 col-lg-4">
                        <p>Un mail vous sera envoyé avec un nouveau mot de passe.</p>
                        <input class="form-control" type="text" id="mail_mdp_oublie" name="mail_mdp_oublie" placeholder="Saisissez votre mail">

                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <button class="btn btn-primary" type="submit">Envoyer</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
