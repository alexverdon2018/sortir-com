{% extends 'base.html.twig' %}
{#{%  form_theme sortieForm 'bootstrap_4_layout.html.twig' %}#}

{% block title %}Créer une sortie | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid pt-3">
        <div class="row">
            <div class="col">
                <h3>Créer un sortie</h3>
                <hr>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-5">
                {# afficher un formulaire #}
                {{ form_start(sortieForm) }}
                {{ form_widget(sortieForm) }}
                <br>
                <div class="text-center">
                    <button class="btn btn-lg btn-warning" type="submit" id="sortie_enregistrer" name="sortie[enregistrer]">Enregistrer le brouillon</button>
                    <button class="btn btn-lg btn-success" type="submit">Publier la sortie</button>
                </div>
                {{ form_end(sortieForm) }}
            </div>
        </div>
    </div>
{% endblock %}

